@model List<Portal.Core.ViewModel.ActivityCalenderViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblActivityList">
            <thead>
                <tr>
                    <th>Activity Date</th>
                    <th>Activity Description</th>  
                    <th>Calender Name</th>  
                    <th>Activity Status</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.ActivityDate</td>
                        <td>@item.ActivityDescription</td>  
                        <td>@item.CalenderName</td>  
                        <td>@(item.ActivityStatus == true ? "Active" : "Inactive")</td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white" class="fa fa-eye" aria-hidden="true" href="~/ActivityCalender/AddEditActivityCalender?ActivityCalenderId=@item.ActivityCalenderId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/ActivityCalender/AddEditActivityCalender?ActivityCalenderId=@item.ActivityCalenderId&AccessMode=2"></a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblActivityList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>