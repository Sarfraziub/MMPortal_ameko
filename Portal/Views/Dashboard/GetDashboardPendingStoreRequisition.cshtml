@model List<Portal.Core.ViewModel.StoreRequisitionViewModel>
@if (Model != null && Model.Count > 0)
{
    <div style="padding:10px;">
        <table class="table int-product" id="tblReorderProductCountList" style="margin-top:10px;">
            <thead style="border-top-left-radius:15px;">
                <tr style="border:none;">
                    <th style="background:#4f75c6; color:#fff;" colspan="8">Pending Requisitions For Approval</th> 
                </tr>
                <tr style="background:#D0DDEC; border:1px solid #ccc;">
                    <th style="text-align:center">Requisition No.</th>                 
                    <th style="text-align:center">Requisition Date</th> 
                    <th style="text-align:center">Requisition Status</th> 
                    
                </tr>
               
            </thead>
            <tbody style="border:1px solid #ccc;">
                @foreach (var item in Model)
                {
                <tr class="success">
                    <td align="center">
                        <a href="~/StoreRequisition/ApprovalStoreRequisition?storeRequisitionId=@item.RequisitionId&AccessMode=3" style="color: blue;text-decoration: underline;" target="_blank">@item.RequisitionNo</a>
                        @*@item.RequisitionNo*@
                    </td>
                    <td align="center">@item.RequisitionDate</td>
                    <td align="center">@item.RequisitionStatus</td>
                </tr>
                }
                <tr>
        <td colspan="8" align="center" style="background:#bfdfff;">
            <a target="_blank" href="@Url.Content("~/StoreRequisition/ListApprovedStoreRequisition?type=Pending")">View All Pending Requisitions</a>
        </td>
    </tr>
            </tbody>
        </table>
    </div>

}
else
{
    <h3 style="color:firebrick;text-align:center">Pending Requisitions Not Found !!!</h3>
}
