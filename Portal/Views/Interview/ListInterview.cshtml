@{
    ViewBag.Title = "List Interviews";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<style>
    .table {
        width: 129% !important;
        max-width: 129% !important;
        margin-bottom: 20px;
    }
</style>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/HRDashboard">HR </a> >> List Interview </b></p></div>
</div>
<section>
    <form action="#" id="frmListRequisition" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtApplicantNo" class="col-sm-4 control-label">Applicant No</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtApplicantNo" name="txtApplicantNo" tabindex="1" placeholder="Search with Applicant No." type="text" maxlength="50" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtInterviewNo" class="col-sm-4 control-label">Interview No.</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtInterviewNo" name="txtInterviewNo" tabindex="1" placeholder="Search with Interview No" type="text" maxlength="50" />
                    </div>
                </div>
               
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtInterviewFinalStatus" class="col-sm-4 control-label">Interview Final Status<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlInterviewFinalStatus" name="ddlInterviewFinalStatus" tabindex="6" class="form-control">
                            <option value="0">Pending</option>
                            <option value="Final">Final</option>
                            <option value="Inprocess">Inprocess</option>
                            <option value="Hold">Hold</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                    </div>
                    </div>
                    <div class="form-group col-md-6">
                    </div>
                </div>
            
        <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtFromDate" class="col-sm-4 control-label">Interview From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="5" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtToDate" class="col-sm-4 control-label">To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="6" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
            </div>



            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" tabindex="8" id="btnSearch" onclick="SearchInterviews()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" tabindex="9" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <a class="btn btn-success" id="btnList" tabindex="10" href="@Url.Content("~/Interview/AddEditInterview")">Add More Interview</a>
                    </center>
                </div>
                <div class="col-md-3 text-right">
                    <input class="btn btn-success" value="Export" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">
                </div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>


<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/Interview/ListInterview.js"></script>
