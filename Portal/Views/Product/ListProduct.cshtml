@{
    ViewBag.Title = "List Product";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<style>
    .table {
        width: 121%;
        max-width: 121%;
        margin-bottom: 20px;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> List Product </b></p></div>
</div>
<section>
    <form action="#" id="frmListProduct" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtProductName" class="col-sm-4 control-label">Product Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductName" name="txtProductName" tabindex="1" placeholder="Search with Product Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtProductCode" class="col-sm-4 control-label">Product Code</label>
                    <div class="col-sm-8">
                        <input id="txtProductCode" name="txtProductCode" tabindex="2" type="text" placeholder="Search with Product Code" maxlength="50" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtProductShortDesc" class="col-sm-4 control-label">Product Short Desc</label>
                    <div class="col-sm-8">
                        <input id="txtProductShortDesc" name="txtProductShortDesc" type="text" tabindex="3" placeholder="Search with Product Short Description" maxlength="100" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtProductFullDesc" class="col-sm-4 control-label">Product Full Desc</label>
                    <div class="col-sm-8">
                        <input id="txtProductFullDesc" name="txtProductFullDesc" type="text" tabindex="4" placeholder="Search with Product Full Description" maxlength="250" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="ddlProductType" class="col-sm-4 control-label">Product Type</label>
                    <div class="col-sm-8">
                        <select id="ddlProductType" name="ddlProductType" tabindex="5" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtBrandName" class="col-sm-4 control-label">Brand/ Manufacturer</label>
                    <div class="col-sm-8">
                        <input id="txtBrandName" name="txtBrandName" type="text" tabindex="8" placeholder="Search with Brand/ Manufacturer name" maxlength="100" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-md-12">

                <div class="form-group col-md-6">
                    <label for="ddlProductMainGroup" class="col-sm-4 control-label">Product Main Group</label>
                    <div class="col-sm-8">
                        <select id="ddlProductMainGroup" name="ddlProductMainGroup" onchange="BindProductSubGroupList(0)" tabindex="5" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="ddlProductSubGroup" class="col-sm-4 control-label">Product Sub Group</label>
                    <div class="col-sm-8">
                        <select id="ddlProductSubGroup" name="ddlProductSubGroup" tabindex="6" class="form-control"></select>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="ddlAssemblyType" class="col-sm-4 control-label">Assembly Type</label>
                    <div class="col-sm-8">
                        <select id="ddlAssemblyType" name="ddlAssemblyType" tabindex="7" class="form-control">
                            <option value="0" selected="selected">-Select Type-</option>
                            <option value="MA">Main Assembly</option>
                            <option value="SA">Sub Assembly</option>
                            <option value="RC">Raw Component</option>
                        </select>
                    </div>
                </div>

            </div>
             


                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <center>
                                <input class="btn btn-success" value="Search" alt="Save" tabindex="9" id="btnSearch" onclick="SearchProduct()" type="button" border="0">
                                <input class="btn btn-success" type="button" id="btnReset" tabindex="10" onclick="ClearFields()" value="Reset" /> 
                                <a class="btn btn-success" id="btnList" tabindex="11" href="@Url.Content("~/Product/AddEditProduct?accessMode=1")">Add More Product</a>
                            </center>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div id="divList"style="margin:10px;margin-top:10px;margin-right:5px">

                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/Product/ListProduct.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script type="text/javascript">
    $("body").on('click', '.dropdown-toggle', function () {
        $(".dropdown-toggle").parent().toggleClass('open');
    });

</script>