@{
    ViewBag.Title = "List Purchase Indent";
    Layout = "~/Views/Shared/_PurchaseLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/PurchaseDashboard">Purchase </a> >> List Purchase Requisition </b></p></div>
</div>
<section>
    <form action="#" id="frmListPurchaseIndent" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group  col-md-6">
                    <label for="txtIndentNo" class="col-sm-4 control-label">Requisition No.</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtIndentNo" name="txtIndentNo" tabindex="1" placeholder="Search with Requisition No." type="text" maxlength="50" />
                    </div>
                    
                </div>
                <div class="form-group col-md-6">
                    <label for="ddlIndentType" class="col-sm-4 control-label">Requisition Type</label>
                    <div class="col-sm-8">
                        <select id="ddlIndentType" name="ddlIndentType" tabindex="2" class="form-control">
                            <option value="0">Select Indent Type</option>
                            <option value="PO">With Order</option>
                            <option value="WPO">Without Order</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                
                <div class="form-group col-md-6">
                    <label for="txtCustomerName" class="col-sm-4 control-label">Customer Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCustomerName" name="txtCustomerName" tabindex="3" placeholder="Search with Customer Name" type="text" maxlength="100" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtCompanyBranch" class="col-sm-4 control-label">Company Location</label>
                    <div class="col-sm-8">
                        <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="4" class="form-control"></select>
                    </div>
                </div>
                
            </div>          
            
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtFromDate" class="col-sm-4 control-label">Requisition From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="5" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtToDate" class="col-sm-4 control-label">Requisition To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="6" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group  col-md-6">
                    <label for="ddlIndentStatus" class="col-sm-4 control-label">Requisition Status</label>
                    <div class="col-sm-8">
                        <select id="ddlIndentStatus" name="ddlIndentStatus" tabindex="7" class="form-control">
                            <option value="0">--Status--</option>
                            <option value="Final">Final</option>
                            <option value="Draft">Draft</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" tabindex="8" onclick="SearchPurchaseIndent()" type="button" border="0">
                        <input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" tabindex="9" value="Reset" />
                        <a class="btn btn-success" id="btnList" tabindex="10" href="@Url.Content("~/PurchaseIndent/AddEditPurchaseIndent?accessMode=1")">Add More Purchase Requisition</a>
                    </center>
                </div>

                <diRequisition Nov class="col-md-3 text-right">
                    
                </diRequisition>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12 ftop">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/PurchaseIndent/ListPurchaseIndent.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>

<script type="text/javascript">
    $("body").on('click', '.dropdown-toggle', function () {
        $(".dropdown-toggle").parent().toggleClass('open');
    });

</script>