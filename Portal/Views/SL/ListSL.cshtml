@{
    ViewBag.Title = "List SL";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AccountDashboard">Account</a> >> List SL </b></p></div>
</div>
<section>
    <form action="#" id="frmListSL" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div> 
         
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtSLHead" class="col-sm-4 control-label">SL Head</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtSLHead" name="txtSLHead" tabindex="1" placeholder="Search with SL Head" type="text" maxlength="100" />
                    </div>
                </div> 
                <div class="form-group col-md-6"> 
                        <label for="txtSLCode" class="col-sm-4 control-label">SL Code</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtSLCode" name="txtSLCode" tabindex="2" placeholder="Search with SL Code" type="text" maxlength="100" />

                        </div> 
                    </div>
                  
                </div>
            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="ddlSLTypeId" class="col-sm-4 control-label">SL Type</label>
                    <div class="col-sm-8">
                        <select id="ddlSLTypeId" name="ddlSLTypeId" class="form-control" style="width: 100%;height: 35px;" tabindex="3"></select>
                    </div>
                </div>
                <div class="form-group col-md-6"> 
                        <label for="ddlGLMainGroupId" class="col-sm-4 control-label">Cost Center</label>
                        <div class="col-sm-8">
                            <select id="ddlCostCenterId" name="ddlCostCenterId" class="form-control"  tabindex="4" style="width: 100%;height: 35px;"></select>
                        </div> 
                </div> 
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="ddlStatus" class="col-sm-4 control-label">Status</label>
                    <div class="col-sm-8">
                        <select id="ddlStatus" name="ddlStatus" style="width: 100%;height: 35px;" tabindex="5">
                            <option value="">ALL</option>
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                    </div>
                </div>
            </div>

                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>

                            <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" tabindex="6" onclick="SearchSL()" type="button" border="0">
                            <input class="btn btn-success" type="button" id="btnReset" tabindex="7" onclick="ClearFields()" value="Reset" /> 
                            <a class="btn btn-success" id="btnList" tabindex="8" href="@Url.Content("~/SL/AddEditSL")">Add More SL</a>
                        </center>
                    </div>
                    <div class="col-md-3 text-right">
                        <input class="btn btn-success" value="Export" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">
                    </div>
                </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div id="divList">

                    </div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/SL/ListSL.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>




<script type="text/javascript">
    $("body").on('click', '.dropdown-toggle', function () {
        $(".dropdown-toggle").parent().toggleClass('open');
    });

</script>