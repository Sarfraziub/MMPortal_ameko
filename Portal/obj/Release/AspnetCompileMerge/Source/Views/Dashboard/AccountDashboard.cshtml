@{
    ViewBag.Title = "Account Dashboard";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div id="wrapper">
    <div id="page-content-wrapper" style="padding-top:5px !important;">
        <div class="page-content">
            <div class="container-fluid">
                <div class="row top-head">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-6" style="margin-top: 5px;margin-bottom:5px">
                        <b><label for="ddlFinYear" class="col-sm-4" style="margin-top: 5px;color:#fff">Financial Year</label></b>
                        <div class="col-sm-8">
                            <select id="ddlFinYear" name="ddlFinYear" onchange="SetFinancialYearSession()" tabindex="1" class="form-control"></select>
                            <input type="hidden" id="hdnCurrentFinyearId" value="@ViewData["currentFinyearId"]" /> 
                        </div>
                    </div>
                    <div class="col-md-3">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4" id="DivBookBalance">

                    </div>
                    <div class="col-md-8" id="DivMonthWiseBankCashTransaction" >

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4" style="padding:10px" id="divBookBalanceChart">
                        <canvas id="barcanvas" height="200" width="200"></canvas>
                    </div>
                    <div class="col-md-8" style="padding:10px" id="divMonthWiseBankCashTransactionChart">
                        <canvas id="MonthWiseBankCashTrnBarCanvas" height="200" width="200"></canvas>
                    </div>
                    
                </div>

            </div>
        </div>
        <!--end body content -->
    </div>
</div>
<script src="~/Scripts/Chart.bundle.min.js"></script>
<script src="~/Scripts/Dashboard/AccountDashboard.js"></script>

<script type="text/javascript">
    $("body").on('click', '.dropdown-toggle', function () {
        $(".dropdown-toggle").parent().toggleClass('open');
    });

</script>