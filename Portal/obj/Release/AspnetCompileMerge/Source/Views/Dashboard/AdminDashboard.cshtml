    ViewBag.Title = "AdminDashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .crm-box {
        width: 31%;
    }

    .crm-box-1 {
        margin-left: -14px;
        width: 33%;
    }

    .crm-box-2 {
        margin-left: 14px;
        width: 32%;
    }

    .inventory-box {
        background: #fff;
        width: 34%;
        padding-right: 0;
    }

    #DivInOutProductQuantityCount {
        padding: 0px;
        width: 65%;
