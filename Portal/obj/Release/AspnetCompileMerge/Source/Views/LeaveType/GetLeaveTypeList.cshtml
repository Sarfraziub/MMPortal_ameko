@model List<Portal.Core.ViewModel.HR_LeaveTypeViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductTypeList">
            <thead>
                <tr>
                    <th>Leave Type Name</th>
                    <th>Leave Type Code</th>
                    <th>Leave Period</th>
                    <th>Pay Period</th>
                    <th>Work Period</th>                   
                    <th>Status</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.LeaveTypeName</td>
                        <td>@item.LeaveTypeCode</td>
                        <td>@item.LeavePeriod</td>
                        <td>@item.PayPeriod</td>
                        <td>@item.WorkPeriod</td>                        
                        <td>@(item.LeaveType_Status == true?"Active":"Inactive")</td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white"  class="fa fa-eye" aria-hidden="true" href="~/LeaveType/AddEditLeaveType?LeaveTypeId=@item.LeaveTypeId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/LeaveType/AddEditLeaveType?LeaveTypeId=@item.LeaveTypeId&AccessMode=2"></a>
                        </td>

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblProductTypeIdList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>