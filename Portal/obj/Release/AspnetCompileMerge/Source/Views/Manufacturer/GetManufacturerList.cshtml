@model List<Portal.Core.ViewModel.ManufacturerViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblProductTypeList">
            <thead>
                <tr>
                    <th>Manufacturer Name</th>
                    <th>Manufacturer Code</th>
                    <th>Created Date</th>
                    <th>CreatedByUserName</th>
                    <th>Modified Date</th>
                    <th>ModifiedByUserName</th>
                    <th>Status</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.ManufacturerName</td>
                        <td>@item.ManufacturerCode</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.CreatedByUserName</td>
                        <td>@item.ModifiedDate</td>
                        <td>@item.ModifiedByUserName</td>

                        <td>@(item.Manufacturer_Status == true?"Active":"Inactive")</td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white"  class="fa fa-eye" aria-hidden="true" href="~/Manufacturer/AddEditManufacturer?manufacturerId=@item.ManufacturerId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/Manufacturer/AddEditManufacturer?manufacturerId=@item.ManufacturerId&AccessMode=2"></a>
                        </td>

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblProductTypeIdList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>