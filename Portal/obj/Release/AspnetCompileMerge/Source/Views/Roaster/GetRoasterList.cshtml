@model List<Portal.Core.ViewModel.HR_RoasterViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblRoasterList">
            <thead>
                <tr>
                    <th>Roster Name</th> 
                    <th>Roster Desc</th> 
                    <th>Roster Start Date</th> 
                    <th>Roster Type</th> 
                    <th>Department Name</th> 
                    <th>No. of Weeks</th> 
                    <th>Status</th>
                    <th>Created By User</th>
                    <th>Created Date</th>
                    <th>Modified By User</th>
                    <th>Modified Date</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.RoasterName</td> 
                        <td>@item.RoasterDesc</td>  
                        <td>@item.RoasterStartDate</td>
                        <td>@item.RoasterType</td>
                        <td>@item.DepartmentName</td>
                        <td>@item.NoOfWeeks</td>
                        <td>@(item.RoasterStatus == true?"Active":"Inactive")</td>
                        <td>@item.CreatedByName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByName</td>
                        <td>@item.ModifiedDate</td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white"  class="fa fa-eye" aria-hidden="true" href="~/Roaster/AddEditRoaster?RoasterId=@item.RoasterId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/Roaster/AddEditRoaster?RoasterId=@item.RoasterId&AccessMode=2"></a>
                        </td> 
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblRoasterList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>