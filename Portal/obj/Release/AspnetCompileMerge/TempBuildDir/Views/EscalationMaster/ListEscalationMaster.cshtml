@{
    ViewBag.Title = "List Escalation Master";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin</a> >> List Escalation Master</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditEscalationMaster" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6"> 
                    <label for="ddlProcessType" class="col-sm-4 control-label">Process Type</label>
                    <div class="col-sm-8">
                        <select id="ddlProcessType" name="ddlProcessType" tabindex="1" class="form-control">
                            <option value="0">--Select Process Type--</option>
                            <option value="PO">PO</option>
                            <option value="PI">PI</option>
                            <option value="SO">SO</option>
                            <option value="SI">SI</option>
                            <option value="Requisition">Requisition</option>
                            <option value="Purchase Indent">Purchase Indent</option>
                            <option value="Purchase Quotation">Purchase Quotation</option>
                        </select>
                    </div>   
                </div>
                <div class="form-group col-md-6"> 
                        
                </div>
                </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" onclick="SearchEscalationMaster()" type="button" border="0" tabindex="3">
                            <input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" tabindex="4" /> 
                            <a class="btn btn-success" id="btnList" href="@Url.Content("~/EscalationMaster/AddEditEscalationMaster")" tabindex="5">Add More Escalation Master</a>
                        </center>
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="row col-sm-6 col-lg-12 col-md-12">
                    <div id="divList" style="margin:100px;margin-top:10px;">

                    </div>
                </div>
            </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/EscalationMaster/ListEscalationMaster.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script type="text/javascript">
    $("body").on('click', '.dropdown-toggle', function () {
        $(".dropdown-toggle").parent().toggleClass('open');
    });

</script>