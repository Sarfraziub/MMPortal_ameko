@model List<Portal.Core.ViewModel.HR_LoanTypeViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblLoanTypeList">
            <thead>
                <tr>
                    <th>Loan Type Name</th> 
                    <th>Loan Interest Rate</th> 
                    <th>InterestCalcOn</th> 
                    <th>Status</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.LoanTypeName</td> 
                        <td>@item.LoanInterestRate</td> 
                        <td>@item.InterestCalcOn</td> 
                        <td>@(item.LoanType_Status == true?"Active":"Inactive")</td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white"  class="fa fa-eye" aria-hidden="true" href="~/LoanType/AddEditLoanType?LoanTypeId=@item.LoanTypeId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/LoanType/AddEditLoanType?LoanTypeId=@item.LoanTypeId&AccessMode=2"></a>
                        </td> 
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblLoanTypeList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>