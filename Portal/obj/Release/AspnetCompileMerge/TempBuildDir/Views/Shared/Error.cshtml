@*@model System.Web.Mvc.HandleErrorInfo*@

@{
    Layout = null;
    ViewBag.Title = "Error";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Resource Not Found</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="row" style="margin-left: 0px !important;">
        <div class="col-md-12" style="background-color:#C0C0C0; margin:0px auto; min-height:500px; background-color:#F4F4F4;">
            @*<div style="min-height:20px; background-color:#C0C0C0; padding:0px; padding:0px;">
                </div>*@
            <div class="container" style="min-height:80px; background-color:#FF0000; margin-top:20px; padding:0px;">
                <p style="font-size:50px; color:#fff; text-align:center;">Resource Not Found</p>
            </div>
            <div class="container" style="min-height:150px; background-color:#E2E2E2; margin-top:20px; padding:0px;">

                    <p style="font-weight:bold; font-size:15px; text-align:center;line-height:25px; margin-top:28px;">@Html.Raw(@ViewBag.ErrorMessage) </p>
                
                    <p style="font-weight:bold; font-size:15px; text-align:center;line-height:25px; margin-top:28px;">Access to the requested page has been denied </p>
                               
                    @if (Session["RoleId"].ToString() == "15" @*Session["UserEmail"].ToString() == "pe@mmps.co.in"*@)
                    {
                        <p style="font-size:15px; text-align:center;">
                            Please contact to administrator. <a href="@Url.Content("~/MasterDashboard/MDDashboard")" class="btn btn-success">Click Here </a> to go back to your Dashboard
                        </p>
                    }
                    else if (Session["RoleId"].ToString() == "74" || Session["RoleId"].ToString() == "1077" @*Session["UserEmail"].ToString() == "pe@mmps.co.in"*@)
                    {
                        <p style="font-size:15px; text-align:center;">
                            Please contact to administrator. <a href="@Url.Content("~/SupervisorDashboard/SupervisorDashboard")" class="btn btn-success">Click Here </a> to go back to your Dashboard
                        </p>
                    }
                    else if (Session["RoleId"].ToString() == "12" || Session["RoleId"].ToString() == "1078" @*Session["UserEmail"].ToString() == "pe@mmps.co.in"*@)
                    {
                        <p style="font-size:15px; text-align:center;">
                            Please contact to administrator. <a href="@Url.Content("~/Dashboard/PurchaseDashboard")" class="btn btn-success">Click Here </a> to go back to your Dashboard
                        </p>
                    }
                    else
                    {
                        <p style="font-size:15px; text-align:center;">
                            Please contact to administrator. <a href="@Url.Content("~/Dashboard/ModuleDashboard")" class="btn btn-success">Click Here </a> to go back to your Dashboard
                        </p>
                    }
            </div>
            @*<div style="min-height:20px; background-color:#C0C0C0; padding:0px; padding:0px; margin-top:20px;">
                </div>*@
        </div>
    </div>
</body>

</html>