@{
    ViewBag.Title = "Add/Edit SiteConsumption";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }

    fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }

    legend {
        display: block;
        width: 40%;
        padding: 0;
        margin-bottom: 5px;
        font-size: 15px;
        line-height: inherit;
        color: #333;
        border: 0;
        border-bottom: 0px solid #e5e5e5;
    }
    /*** custom checkboxes ***/

    input[type=checkbox] {
        display: none;
    }
        /* to hide the checkbox itself */
        input[type=checkbox] + label:before {
            font-family: FontAwesome;
            display: inline-block;
        }

        input[type=checkbox] + label:before {
            content: "\f096";
        }
        /* unchecked icon */
        input[type=checkbox] + label:before {
            letter-spacing: 10px;
        }
        /* space between checkbox and label */

        input[type=checkbox]:checked + label:before {
            content: "\f046";
        }
        /* checked icon */
        input[type=checkbox]:checked + label:before {
            letter-spacing: 5px;
        }
    /* allow space for check mark */
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory </a> >> Add/Edit SiteConsumption</b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditWorkOrder" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div>
                <div class="col-md-12 ftop">
                    <div class="form-group col-md-6">
                        <label for="txtFabricationNo" class="col-sm-4 control-label">SiteConsumption No.</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtSiteConsumptionNo" name="txtSiteConsumptionNo" tabindex="1" placeholder="Auto Generated SiteConsumption No." type="text" maxlength="100"  readonly/>
                            <a style="display:none;color:#fff;" class="btn btn-success" id="btnAddNew" href="@Url.Content("~/SiteConsumption/AddEditSiteConsumption")">New</a>
                            <input id="hdnsiteConsumptionId" type="hidden" value="@ViewData["consumptionSiteId"]" />
                            <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtFabricationDate" class="col-sm-4 control-label">Consumption Date&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8 ">
                            <input class="form-control" id="txtConsumptionDate" name="txtConsumptionDate" tabindex="2" placeholder="Select Consumption Date" value="@ViewData["currentDate"]" type="text" maxlength="50" readonly/>
                            <input id="hdnCurrentDate" name="hdnCurrentDate" value="@ViewData["currentDate"]" type="hidden" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-6">
                        <label for="txtCustomerName" class="col-sm-4 control-label">Customer&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtCustomerName" name="txtCustomerName" tabindex="3" placeholder="Enter Customer Name" type="text" />
                            <input id="hdnCustomerId" type="hidden" value="" />
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ddlCustomerBranch" class="col-sm-4 control-label">Customer Branch&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <select id="ddlCustomerBranch" name="ddlCustomerBranch" tabindex="4" class="form-control"></select>
                        </div>

                    </div>

                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-6">
                        <label for="txtCustomerCode" class="col-sm-4 control-label">Customer Code</label>
                        <div class="col-sm-8 ">
                            <input class="form-control" tabindex="5" id="txtCustomerCode" name="txtCustomerCode" value="@ViewData["customerCode"]" placeholder="Customer Code" type="text" maxlength="50" />

                        </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ddlCompanyBranch" class="col-sm-4 control-label" >Company Branch<span class="Mandatory">(*)</span></label>
                            <div class="col-sm-8">
                                <select id="ddlCompanyBranch" name="ddlCompanyBranch" tabindex="6" class="form-control"></select>
                            </div>

                        </div>

                    </div>
                <div class="col-md-12">
                    <div class="form-group col-md-6">
                        <label for="txtRemarks1" class="col-sm-4 control-label">Remarks 1</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="txtRemarks1" name="txtRemarks1" tabindex="7" rows="3" cols="50" maxlength="500"> </textarea>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtRemarks2" class="col-sm-4 control-label">Remarks 2</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="txtRemarks2" name="txtRemarks2" tabindex="8" rows="3" cols="50" maxlength="500"> </textarea>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                   
                       
                        <div class="form-group col-md-6">
                            <label for="txtConsumedByUser" class="col-sm-4 control-label">Consumed By User &nbsp;<span class="Mandatory">(*)</span></label>
                            <div class="col-sm-8">
                                <input class="form-control" id="txtConsumedByUser" name="txtConsumedByUser" tabindex="9"  maxlength="50" placeholder="Please enter Consumed User Name"/> 
                            </div>
                        </div>

                    </div>
                
                <div class="col-md-12  ftop">
                    <div class="form-group col-md-4">

                    </div>
                    <div class="form-group col-md-4" style="background-color:yellow">
                        <h4><label class="col-sm-12 " style="color:#000;text-decoration:underline;text-align:center;"><b>Product Detail</b></label></h4>
                    </div>
                    <div class="form-group col-md-4">
                        <input class="btn btn-success editonly" value="Add New Product" tabindex="13" alt="Add New Product" id="btnAddNewProduct" onclick="validateCustomerSelection(1)" type="button" border="0">
                    </div>

                </div>
                <div class="col-md-12 productsection" style="display:none;">
                    <div class="form-group col-md-4">
                        <label for="ddlProductMainGroup" class="col-sm-4 control-label">Product Main Group&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <select id="ddlProductMainGroup" name="ddlProductMainGroup" tabindex="6" class="form-control"></select>
                            <input id="hdnProductMainGroupId" type="hidden" value="0" />
                            <input id="hdnProductMainGroupName" type="hidden" value="0" />
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtProductName" class="col-sm-4 control-label">Product Name&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtProductName" name="txtProductName" tabindex="14" placeholder="Enter Product Name" type="text" maxlength="100" />
                            <input id="hdnProductId" type="hidden" value="0" />
                            <input id="hdnSiteConsumptionDetailId" type="hidden" value="0" />
                            <input id="hdnSequenceNo" type="hidden" value="0" />
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtProductCode" class="col-sm-4 control-label">Product Code</label>
                        <div class="col-sm-8">
                            <input id="txtProductCode" name="txtProductCode" tabindex="15" type="text" maxlength="50" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group col-md-4" style="display:none;">
                        <label for="txtproductshortdesc" class="col-sm-4 control-label">product desc</label>
                        <div class="col-sm-8">
                            <input id="txtproductshortdesc" name="txtproductshortdesc" type="text" tabindex="16" maxlength="250" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12 productsection" style="display:none;">
                    <div class="form-group col-md-4">
                        <label for="txtQuantity" class="col-sm-4 control-label">Quantity&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <input id="txtQuantity" name="txtQuantity" tabindex="17" type="text" onkeyup="checkDec(this);" maxlength="25" placeholder="Quantity" class="form-control right-text input-number" />
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtUOMName" class="col-sm-4 control-label">Unit</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtUOMName" name="txtUOMName" tabindex="18" placeholder="Unit" type="text" maxlength="50" />
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtAvailableStock" class="col-sm-4 control-label">Available Stock</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtAvailableStock" name="txtAvailableStock" tabindex="18" placeholder="Available Stock" type="text" maxlength="50" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-lg-12 col-md-12 productsection" style="display:none;">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <input class="btn btn-success" value="Add Product" alt="Add Product" id="btnAddProduct" tabindex="19" onclick="AddProduct(1)" type="button" border="0">
                            <input class="btn btn-success" value="Update Product" style="display:none;" alt="Update Product" tabindex="19" id="btnUpdateProduct" onclick="AddProduct(2)" type="button" border="0">
                            <input class="btn btn-success" type="button" id="btnCancelProduct" tabindex="20" onclick="ShowHideProductPanel(2)" value="Cancel" />
                        </center>
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="col-sm-12 col-lg-12 col-md-12 ftop">
                    <div id="divProductList">

                    </div>
                </div>


            </div>
            <div class="row col-sm-12 col-lg-12 col-md-12 ftop">
                <div class="col-md-3">
                    <label for="ddlFabricationStatus" class="col-sm-4 control-label">Save Mode</label>
                    <div class="col-sm-8">
                        <select id="ddlConsumptionStatus" name="ddlConsumptionStatus" tabindex="21" class="form-control">
                            <option selected="selected" value="Draft">Draft</option>
                            <option value="Final">Final</option>
                        </select>
                    </div>

                </div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="22" onclick="SaveData();" type="button" border="0">
                        <input class="btn btn-success" value="Update" style="display:none;" tabindex="22" alt="Update" id="btnUpdate" onclick="SaveData()" type="button" border="0">
                        @*<input class="btn btn-success" type="button" id="btnReset" tabindex="23" onclick="ClearFields()" value="Reset" />*@
                        <a class="btn btn-success" id="btnReset" tabindex="5" onclick="ResetPage()">Reset</a>
                        <a class="btn btn-success" id="btnList" tabindex="24" href="@Url.Content("~/SiteConsumption/ListSiteConsumption")">Search SiteConsumption</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
        
    </form>
</section>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/SiteConsumption/AddSiteConsumption.js"></script>

<script type="text/javascript">
    $("body").on('click', '.dropdown-toggle', function () {
        $(".dropdown-toggle").parent().toggleClass('open');
    });

</script>