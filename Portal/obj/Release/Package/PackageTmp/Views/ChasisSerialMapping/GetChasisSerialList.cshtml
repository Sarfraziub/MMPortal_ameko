@model List<Portal.Core.ChasisSerialMappingViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table {
        width: 130% !important;
        max-width: 130% !important;
        margin-bottom: 20px;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblUserList">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Chasis Serial No</th>
                    <th>Motor No</th>
                    <th>Controller No</th>
                    <th>Color</th>
                    <th>Battery Power</th>
                    <th>Battery SerialNo1</th>
                    <th>Battery SerialNo2</th>
                    <th>Tier</th>
                    <th>FrontGlassAvailable</th>
                    <th>ViperAvailable</th>
                    <th>RearShockerAvailable</th>
                    <th>ChargerAvailable</th>
                    <th>CreatedBy</th>
                    <th>Status</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.ProductName</td>
                        <td>@item.ChasisSerialNo</td>
                        <td>@item.MotorNo</td>
                        <td>@item.ControllerNo</td>
                        <td>@item.Color</td>
                        <td>@item.BatteryPower</td>
                        <td>@item.BatterySerialNo1</td>
                        <td>@item.BatterySerialNo2</td>
                        <td>@item.Tier</td>
                        <td style="text-align:center;">@(item.FrontGlassAvailable==true?"YES":"NO")</td>
                        <td style="text-align:center;">@(item.ViperAvailable==true?"YES":"NO")</td>
                        <td style="text-align:center;">@(item.RearShockerAvailable == true ? "YES" : "NO")</td>
                        <td style="text-align:center;">@(item.ChargerAvailable == true ? "YES" : "NO")</td>
                        <td style="text-align:center;">@item.CreatedByName</td>
                        <td style="text-align:center;">@(item.ChasisSerialMapping_Status == true?"Active":"Inactive")</td>

                        <td class="btn btn-success table_btn" style="width:25px; margin:0px auto;">
                            <a style="color:white" class="fa fa-eye" aria-hidden="true" href="~/ChasisSerialMapping/AddEditChasisSerialMapping?chasisSerialMappingId=@item.MappingId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:25px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/ChasisSerialMapping/AddEditChasisSerialMapping?chasisSerialMappingId=@item.MappingId&AccessMode=2"></a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblUserList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>