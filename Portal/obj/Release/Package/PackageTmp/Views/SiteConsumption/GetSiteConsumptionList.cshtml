@model List<Portal.Core.ViewModel.SiteConsumptionViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table th {
        background: rgba(0, 0, 0, 0) linear-gradient(#375CB0, #6e96e2) repeat scroll 0 0;
    }

    .table th {
        color: #ffffff;
        text-align: center;
    }

    .table tr {
        text-align: center;
    }
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;background-color:white;">
        <table class="table table-bordered table-hover" id="tblCountryList">
            <thead>
                <tr>
                    <th colspan="2"><center>Action</center></th>
                    <th><center>SiteConsumption No.</center></th>
                    <th><center>SiteConsumption Date</center></th>
                    <th><center>Location</center></th>
                    <th><center>Status</center></th>
                    <th><center>Created By User</center></th>
                    <th><center>Created Date</center></th>
                    <th><center>Modified By User</center></th>
                    <th><center>Modified Date</center></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td class="teal text" style="margin:0px auto;">
                            <a style="color:darkblue" title="View" class="fa fa-eye" aria-hidden="true" href="~/SiteConsumption/AddEditSiteConsumption?consumptionSiteId=@item.SiteConsumptionId&AccessMode=3"></a>
                        </td>
                        <td class="teal text" style="margin:0px auto;">
                            @if (item.ConsumptionStatus.ToUpper() == "DRAFT")
                            {
                                <a style="color:darkgreen" title="Edit" class="fa fa-pencil" href="~/SiteConsumption/AddEditSiteConsumption?consumptionSiteId=@item.SiteConsumptionId&AccessMode=2"></a>
                            }

                        </td>
                        <td>@item.SiteConsumptionNo</td>
                        <td>@item.SiteConsumptionDate</td>
                        
                        <td>@item.CompanyBranchName</td>
                        @if (item.ConsumptionStatus.ToUpper() == "DRAFT")
                        {
                            <td style="background-color:aquamarine">
                                @item.ConsumptionStatus
                            </td>
                        }
                        else
                        {
                            <td style="background-color:green">
                                @item.ConsumptionStatus
                            </td>

                        }


                        <td>@item.CreatedByUserName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByUserName</td>
                        <td>@item.ModifiedDate</td>



                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblCountryList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>